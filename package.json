{
  "name": "anywhere",
  "private": true,
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "commit": "pnpm lint && pnpm format && git add . && pnpm dlx git-cz",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "database:generate": "cd packages/database && npm run generate && cd -",
    "database:migrate": "cd packages/database && npm run migrate && cd -",
    "backend": "cd apps/api && pnpm run dev",
    "frontend": "cd apps/host && pnpm run dev",
    "studio": "cd packages/database && pnpm prisma studio",
    "deploy:xyz": "git checkout release/xyz && git pull && git merge - --no-edit && git push && git checkout -"
  },
  "devDependencies": {
    "@types/react": "19.1.10",
    "@types/react-dom": "19.1.7",
    "prettier": "^3.6.2",
    "turbo": "^2.5.6",
    "typescript": "5.9.2"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "jotai": "^2.13.1"
  },
  "pnpm": {
    "overrides": {
      "react": "18.0.0",
      "react-dom": "18.0.0",
      "antd": "5.27.0",
      "@ant-design/icons": "6.0.0",
      "@types/react": "18.0.37",
      "@types/react-dom": "18.0.11"
    }
  }
}
